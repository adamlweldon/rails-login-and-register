<h1>Profile for <%= @user.name %></h1>
<%= link_to 'View All Profiles', users_path, :class=> "btn btn-success"%>
<%= link_to 'Logout', signout_path, :class=> "btn btn-danger"%>
<br/>
<p>Leave a comment for <%= @user.name %></p>
<%= link_to 'Leave Comment', new_user_comment_path(@user.id, @comment), :class=> "btn btn-primary" %>

<!--to display the comments for a specific product -->
<h4>Comments</h4>
<% @user_comments.each do |comment| %>
	<div class="display">
		<p><%= comment.comment %></p>
		<small>Posted by <%= User.find(comment.commenter_id).name %></small><br/>
		<a class="btn btn-warning" href="/users/<%=@user.id%>/comments/<%=comment.id%>" data-method="delete" data-confirm="Are you sure you want to delete this comment?">Delete</a>
	</div>
	<% end %>